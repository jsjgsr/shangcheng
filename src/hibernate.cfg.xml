<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/shangcheng?characterEncoding=utf-8
		</property>
		<property name="connection.username">root</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>
		<property name="formart_sql">true</property>
		<property name="myeclipse.connection.profile">aaaaa</property>
		<mapping resource="com/pojo/Users.hbm.xml" />
		<mapping resource="com/pojo/Product.hbm.xml" />
		<mapping resource="com/pojo/Cart.hbm.xml" />
		<mapping resource="com/pojo/Uvc.hbm.xml" />
		<mapping resource="com/pojo/Dingdan.hbm.xml" />

	</session-factory>

